<script type="text/javascript">
    $(document).ready(function () {

        $("#stop_button").click(function(){

        });
    });
</script>
<div class="overlay"></div>
<div class="container-fluid">
  <div class="row">
    <%= render 'patrial/navbar' %>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <%= render('patrial/sidebar', menu: {active: "акция"}) %>
      <div class="col-lg-12">
        <% if @stock.errors.any? %>
            <div id="error_explanation">

              <% @stock.errors.full_messages.each do |msg| %>
                  <div class="alert alert-warning" role="alert"><%= msg %></div>
              <% end %>
            </div>
        <% end %>
        <table class="table">
          <thead>
          <tr>
            <th>дата начало</th>
            <th>дата окончания</th>
            <th>время окончания</th>
            <th>число победителей</th>
            <th>хэштег</th>
            <th>статус</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <td><%= @stock.start_date %></td>
            <td><%= @stock.expiration_date %></td>
            <td><%= @stock.expiration_time %></td>
            <td><%= @stock.number_of_the_winners %></td>
            <td><%= @stock.hashtag %></td>
            <% if @stock.is_valid %>
                <td>Акция активна</td>
                <td><%= link_to 'Остановить', edit_stock_path(@stock), id: "stop_button" %></td>
                </td>
            <% else %>
                <td>Акция остановленна</td>
                <td><%= link_to 'Удалить', stock_path(@stock), method: :delete, data: {confirm: 'Вы уыерены?'} %></td>
                </td>
            <% end %>


          </tr>
          </tbody>
        </table>

        <% if @members.length > 0 %>

            <table class="table table-hover">
              <thead>
              <tr>
                <th>№</th>
                <th>Имя</th>
                <th>Ник</th>
                <th>Лайки</th>
                <th>Дата</th>
                <th>Изображение</th>
                <th>Статус видимости</th>

              </tr>
              </thead>
              <tbody>
              <% i=1 %>
              <% @members.each do |member| %>
                  <tr>
                    <td><%= i %> <% i=i+1 %></td>
                    <% if member.name.length > 0 %>
                        <td><%= member.name %></td>
                    <% else %>
                        <td>Имя не указанно</td>
                    <% end %>
                    <td><%= member.nickname %></td>
                    <td><%= member.likes %></td>
                    <td><%= Time.at(member.publication_date.to_i).to_formatted_s(:db) %></td>
                    <td><%= image_tag member.photo_url, height: '32', width: '32' %></td>
                    <% if member.display_in_stocks %>
                        <td>На сайте</td>
                    <% else %>
                        <td>Нет на сайте</td>
                    <% end %>
                  </tr>
              <% end %>
              </tbody>
            </table>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <%= render 'patrial/navbar' %>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      <%= render('patrial/sidebar', menu: {active: "разблокированные"}) %>
      <div class="col-lg-12">

        <% if @members_true.length > 0 %>
            <table class="table table-hover">
              <thead>
              <tr>
                <th>№</th>
                <th></th>
              </tr>
              </thead>
              <tbody>
              <% @members_true.each do |member| %>
                  <tr> <td><%= image_tag member.photo_url, height: '32', width: '32' %></td></tr>
                  <tr>
                    <% if member.name.length > 0 %>
                        <td><%= member.name %></td>
                    <% else %>
                        <td>Имя не указанно</td>
                    <% end %>
                    <td><%= member.nickname %></td>
                    <td><%= member.likes %></td>
                    <td><%= Time.at(member.publication_date.to_i).to_formatted_s(:db) %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
        <% end %>

      </div>
    </div>
  </div>
</div>